<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="actionBarTheme">@style/MyActionBar</item>
        <item name="actionBarStyle">@style/Theme.MyApp.ActionBar</item>
        <!-- 使用LightStatusBarMode -->
        <item name="android:windowLightStatusBar">true</item>

        <item name="android:windowActivityTransitions">true</item>
        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="android:windowAllowReturnTransitionOverlap">true</item>
    </style>

    <style name="MyActionBar" parent="@style/ThemeOverlay.AppCompat.Light">
        <item name="android:background">#fff</item>
    </style>

    <style name="Theme.MyApp.ActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="elevation">0dp</item>
    </style>

    <style name="AppTheme.SecondActivity" parent="AppTheme">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="NoActionBar" parent="@android:style/Theme.Holo.Light">
        <item name="windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="ButtonMain" parent="Widget.AppCompat.Button">
        <item name="android:stateListAnimator">@null</item>
        <item name="android:background">@drawable/button_main_bg</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:foreground">@drawable/ripple_drawable_oval</item>
    </style>

    <style name="ButtonSecond" parent="Widget.AppCompat.Button">
        <item name="android:stateListAnimator">@null</item>
        <item name="android:background">@drawable/button_second_bg</item>
        <item name="android:textColor">@color/b30</item>
        <item name="android:textSize">16sp</item>
        <item name="android:foreground">@drawable/ripple_drawable_oval</item>
    </style>

    <style name="ButtonPay" parent="Widget.AppCompat.Button">
        <item name="android:stateListAnimator">@null</item>
        <item name="android:background">@drawable/button_pay_bg</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:foreground">@drawable/ripple_drawable_oval</item>
    </style>

    <style name="ButtonGhost" parent="Widget.AppCompat.Button">
        <item name="android:stateListAnimator">@null</item>
        <item name="android:background">@drawable/button_ghost_bg</item>
        <item name="android:textColor">@color/b30</item>
        <item name="android:textSize">16sp</item>
        <item name="android:foreground">@drawable/ripple_drawable_oval</item>
    </style>

    <style name="ButtonLink" parent="Widget.AppCompat.Button">
        <item name="android:stateListAnimator">@null</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">@color/b30</item>
        <item name="android:textSize">13sp</item>
        <item name="android:foreground">@drawable/ripple_drawable_radius</item>
    </style>

    <style name="ImageViewClickable" parent="android:Theme">
        <item name="android:clickable">true</item>
        <item name="android:foreground">@drawable/ripple_drawable_oval</item>
    </style>

    <style name="TextViewClickable" parent="android:Theme">
        <item name="android:clickable">true</item>
        <item name="android:foreground">?attr/selectableItemBackgroundBorderless</item>
    </style>

    <style name="StatusText1Online">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/b20</item>
    </style>

    <style name="StatusText2Offline">
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/b65</item>
    </style>

    <style name="BarsTitle1Active20Black">
        <item name="android:fontFamily">@font/sourcehansanssc_heavy</item>
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">@color/b20</item>
    </style>

    <style name="BarsTitle2Normal65Black">
        <item name="android:fontFamily">@font/sourcehansanssc_heavy</item>
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">@color/b65</item>
    </style>

</resources>
